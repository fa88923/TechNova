<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Order Details</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/POdetails/page.css">
</head>
<body class="text-light">
    <div class="container mt-5">

        <!-- Section 1: Details of Purchase Order -->
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">Details of Purchase Order</h4>
            </div>
            <div class="card-body">
                <ul>
                    <% details.forEach(detail => { %>
                        <li><strong>Order ID:</strong> <%= detail.ORDER_ID %></li>
                        <li><strong>Placement Date:</strong> <%= detail.PLACEMENT_DATE %></li>
                        <li><strong>Pickup Date:</strong> <%= detail.PICKUP_DATE %></li>
                    <% }); %>
                </ul>
            </div>
        </div>

        <!-- Section 2: Information related to Receipt -->
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">Information related to Receipt</h4>
            </div>
            <div class="card-body">
                <ul>
                    <% details.forEach(detail => { %>
                        <li><strong>Method:</strong> <%= detail.METHOD %></li>
                        <li><strong>Sent From Account:</strong> <%= detail.SENT_FROM_ACOOUNT %></li>
                        <li><strong>Received To Account:</strong> <%= detail.RECEIVED_TO_ACCOUNT %></li>
                        <li><strong>Status:</strong> <%= detail.STATUS %></li>
                        <li><strong>Amount:</strong> <%= detail.AMOUNT %></li>
                        <li><strong>Payment Date:</strong> <%= detail.PAYMENT_DATE %></li>
                    <% }); %>
                </ul>
            </div>
        </div>

        <!-- Section 3: Shipment Details -->
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">Shipment Details</h4>
            </div>
            <div class="card-body">
                <ul>
                    <% details.forEach(detail => { %>
                        <li><strong>Picked Up By:</strong> <%= detail.PICKED_UP_BY %></li>
                        <li><strong>Picked Up From:</strong> <%= detail.PICKED_UP_FROM %></li>
                        <li><strong>Picked Up On:</strong> <%= detail.PICKED_UP_ON %></li>
                        <li><strong>Picked Up At:</strong> <%= detail.PICKED_UP_AT %></li>
                        <li><strong>Received At:</strong> <%= detail.RECEIVED_AT %></li>
                        <li><strong>Received On:</strong> <%= detail.RECEIVED_ON %></li>
                        <li><strong>Received At Time:</strong> <%= detail.RECEIVED_AT_TIME %></li>
                        <li><strong>Vehicle Used:</strong> <%= detail.VEHICLE_USED %></li>
                        <li><strong>Current Location:</strong> <%= detail.CURRENT_LOCATION %></li>
                    <% }); %>
                </ul>
            </div>
        </div>

        <!-- Section 4: Purchase List (Dropdown) -->
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">Purchase List</h4>
            </div>
            <div class="card-body">
                <button class="btn btn-primary show-purchase-list-btn" type="button" data-toggle="collapse" data-target="#purchaseList" aria-expanded="false" aria-controls="purchaseList">
                    Show Purchase List
                </button>
                <div class="collapse mt-3" id="purchaseList">
                    <table class="table table-bordered table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price Each</th>
                                <th scope="col">Quantity</th>
                                <!-- <th scope="col">Total Due</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <% purchaseList.forEach(item => { %>
                                <tr>
                                    <td><%= item.PRODUCT_NAME %></td>
                                    <td><%= item.PRICE_EACH %></td>
                                    <td><%= item.QUANTITY %></td>
                                    <!-- <td><%= item.TOTAL_DUE %></td> -->
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (jQuery, Popper.js) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
