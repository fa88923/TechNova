<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/orderform.css">
    <title>Table with Checkboxes and Quantity Input</title>
</head>

<body>
    <div class="table-container">
        <div class="table-box">
            <table>
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 1; i <= 5; i++) { %>
                        <tr>
                            <td>Item <%= i %></td>
                            <td>
                                <div class="user-box">
                                    <input type="checkbox" id="checkbox<%= i %>" />
                                    <label for="checkbox<%= i %>"></label>
                                    <input type="number" id="quantity<%= i %>" name="quantity<%= i %>" />
                                </div>
                            </td>
                            <td>
                                <button class="user-box button">Action</button>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
