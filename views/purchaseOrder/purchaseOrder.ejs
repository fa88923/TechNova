<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/supplierSearch.css">
    <link rel="stylesheet" type="text/css" href="/css/supplier.css">
    <link rel="stylesheet" type="text/css" href="/css/dropdown.css">

    <title>Purchase Orders</title>
</head>

<body>
    <div class="container mt-5">
        <div id="navbar">
            <h1 class="mb-4">Purchase Orders</h1>
            <div class="search-box">
                <form id="searchForm">
                    <button class="btn-search" type="submit"><i class="fas fa-search"></i></button>
                    <input type="text" class="input-search" id="searchkey" placeholder="Search...">
                </form>
            </div>
        </div>
  

        <br><br><br>
        <br><br><br>
         
        <!--po list-->

        <div class="table-responsive">
            <% if (purchase_orders.length > 0) { %>
                <table class="table table-bordered table-hover table-dark">
                    <thead class="thead-dark">
                        <tr>
                            <th>TRANSACTION ID</th>
                            <th>SUPPLIER NAME</th>
                            <th>PAYMENT STATUS</th>
                            <th>SHIPMENT STATUS</th>
                            <th>STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% purchase_orders.forEach(purchase_order => { %>
                        <tr>
                            <td><%= purchase_order.TRANSACTION_ID %></td>
                            <td><a href="#" class="supplier-details-button" data-supplier-id="<%= purchase_order.SUPPLIER_ID %>"><%= purchase_order.NAME %></a></td> 
                            <td><%= purchase_order.PAYMENT_STATUS %> </td>
                            <td><%= purchase_order.SHIPMENT_STATUS %></td>
                            <td><%= purchase_order.STATUS %></td>
                            <td>
                                <button class="details-button" transaction-id="<%= purchase_order.TRANSACTION_ID %>">Details</button>
                            </td>
                        </tr>
                        <% });
                        %>
                    </tbody>
                </table>
            <% } else { %>
                <p>        No purchase orders found.</p>
            <% } %>
        </div>
        <!-- dropdown -->
        <div class="card mb-4">
            <div class="card-header">
                Add purchase order
            </div>
            <div class="card-body">
                <form id="supplierForm">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <!-- <label for="inputSupplier">Suppliers</label> -->
                            <select id="inputSupplier" class="form-control" name="supplier">
                                <option value="" selected>Choose supplier</option>
                                <% supplier_list.forEach(supplier => { %>
                                    <option value="<%= supplier.ORGANIZATION_ID %>"><%= supplier.NAME %></option>
                                <% }); %>
                            </select>
                        </div>
                        
                        <!-- <div class="form-group col-md-4">
                            <button type="button" class="btn btn-primary" onclick="">Add</button>
                        </div> -->
                        <div class="add_button form-group col-md-4">
                            <button type="button" id="add_button" >Add purchase order</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- add button -->
        <!-- <div class="add_button">
            <br><br><br>
            <button type="button" id="add_button_po" >Add purchase order</button>
        </div> -->

        
    </div>
    <!--<script src="/js/supplierPageControllers/addScript.js"></script>
    <script src="/js/supplierPageControllers/searchScript.js"></script>-->



    <script src="/js/POpageControllers/purchaseOrderController.js"></script>


    <script src="/js/homeControllers/supplierLink.js"></script>
    <script src="/js/homeControllers/transportLink.js"></script>
    <script src="/js/homeControllers/clientLink.js"></script>
    <script src="/js/homeControllers/productLink.js"></script>
    <script src="/js/homeControllers/branchLink.js"></script>
    <script src="/js/homeControllers/purchaseOrderLink.js"></script>
    <script src="/js/homeControllers/supplyRequestsLink.js"></script>
</body>
</html>

